{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": []
}
