{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2019", "DOM"],
    "sourceMap": true,
    "outDir": "dist/cjs",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "demo/**/*"],
  "exclude": []
}
